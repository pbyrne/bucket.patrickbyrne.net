---
layout: layout
---

<form class="images--filter invisible">
  <fieldset>
    <label for="filter" class="images--filter-label">Filter images</label>
    <input
      class="images--filter-input"
      data-action="filter"
      id="filter"
      name="filter"
      placeholder="Filter images"
      />
  </fieldset>
</form>

<table class="images--container">
  <thead>
    <tr class="images--row">
      <th class="images--sort-trigger images--image-name" data-sorted="asc">Name</th>
      <th class="images--image-thumbnail">Thumbnail</th>
      <th class="images--sort-trigger images--image-date">Date</th>
    </tr>
  </thead>
  <tbody>
    {% for image in bucket.images %}
      <tr class="images--row images--image" data-name="{{ image.original.name }}" data-type="{{ image.type }}">
        <td class="images--image-name">
          <a href="/{{ image.original.name }}">{{ image.original.name }}</a>
        </td>

        <td class="images--image-thumbnail">
          <a href="/{{ image.original.name }}">
            <img src="{{ image.thumbnail.url }}"
                 loading="lazy"
                 width="{{ image.thumbnail.width }}"
                 height="{{ image.thumbnail.height }}"
                 />
          </a>
        </td>

        <td class="images--image-date">
          {{ image.date | date: "%Y-%m-%d" }}
        </td>
      </tr>
    {% endfor %}
  </tbody>
</table>
